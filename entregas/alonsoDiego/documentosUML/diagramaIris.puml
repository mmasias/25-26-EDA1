class ListaAsignaturas {
    + insertar(a : Asignatura)
    + buscar(codigo : String) : Asignatura
    + estaVacia() : boolean
}

class Asignatura {
    - nombre : String
    - codigo : String
    - suscriptores : ListaUsuarios
}

class ListaUsuarios {
    + insertar(u : Usuario)
    + obtenerTodos() : Usuario[]
    + borrar(u : Usuario) : boolean
    + estaVacia() : boolean
}

class Usuario {
    - nombre : String
    - telefono : String
}

class ColaMensajes {
    + encolar(m : Mensaje)
    + desencolar() : Mensaje
    + estaVacia() : boolean
}

class Mensaje {
    - texto : String
    - destino : String
}

